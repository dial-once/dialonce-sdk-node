{
  "extends": "airbnb",
  "env": {
    "node":true,
    "mocha":true,
    "es6": true,
    "mongo":true
  },
  "rules": {
    // disable requiring trailing commas
    "comma-dangle": 0,
    "max-len": ["error", {"code": 120, "ignoreComments": true, "ignoreUrls": true}],
    "no-underscore-dangle": [2, { "allow": ["_id", "__get__", "__with__", "_this"] }],
    "prefer-rest-params": 0,
    "no-plusplus": 0,
    "no-console": 0
  }
}
